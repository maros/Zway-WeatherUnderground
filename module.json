{
    "dependencies": [],
    "singleton": true,
    "category": "environment",
    "author": "Maroš Kollár",
    "homepage": "http://k-1.com",
    "icon": "icon.png",
    "version": "1.0.0",
    "maturity": "stable",
    "moduleName": "WeatherUnderground",
    "repository": {
        "type": "git",
        "source": "https://github.com/maros/Zway-WeatherUnderground"
    },
    "defaults": {
        "title": "__title__",
        "description": "__description__",
        "location": "autoip",
        "apiKey": "",
        "unitTemperature": "celsius",
        "unitSystem": "metric",
        "interval": 60
    },
    "schema": {
        "type": "object",
        "properties": {
            "location": {
                "type": "string"
            },
            "unitTemperature": {
                "type": "select",
                "enum": ["celsius", "fahrenheit"],
                "required": true
            },
            "unitSystem": {
                "type": "select",
                "enum": ["metric", "imperial"],
                "required": true
            },
            "apiKey": {
                "type": "string",
                "required": true
            },
            "interval" : {
                "type": "number",
                "required": true
            }
        },
        "required": true
    },
    "options": {
        "fields": {
            "location": {
                "label": "__location__",
                "helper": "__location_helper__"
            },
            "unitTemperature": {
                "label": "__unit_temperature__",
                "optionLabels": ["°C", "°F"]
            },
            "unitSystem": {
                "label": "__unit_system__",
                "optionLabels": ["__unit_system_metric__", "__unit_system_imperial__"]
            },
            "apiKey": {
                "label": "__api_key__"
            },
            "interval" : {
                "label" : "__interval_label__",
                "helper" : "__interval_helper__"
            }
        }
    }
}
